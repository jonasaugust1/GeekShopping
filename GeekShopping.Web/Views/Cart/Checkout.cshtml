@model GeekShopping.Web.Models.CartViewModel


@if(Model != null && Model?.CartDetails?.Count() > 0)
{
    <form method="post">
        <input asp-for="CartHeader.UserId" hidden />
        <input asp-for="CartHeader.Id" hidden />
        <input asp-for="CartHeader.CouponCode" hidden />
        <input asp-for="CartHeader.DiscountAmount" hidden />
        <input asp-for="CartHeader.PurchaseAmount" hidden />

        <div>
            <span style="font-size:25px;" class="text-warning">Enter details and place order:</span>
            <br/>
        </div>

        <div class="border mt-2">
            <div class="container row">
                <div class="col-7">
                    <div class="row">
                        <div class="col-12">
                            <label class="col-form-label">
                                First Name:
                            </label>

                            <input asp-for="CartHeader.FirstName" class="form-control"/>
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">
                                Last Name:
                            </label>

                            <input asp-for="CartHeader.LastName" class="form-control" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">
                                Email:
                            </label>

                            <input asp-for="CartHeader.Email" class="form-control" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">
                                Phone Number:
                            </label>

                            <input asp-for="CartHeader.PhoneNumber" class="form-control" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">
                                Card Number:
                            </label>

                            <input asp-for="CartHeader.CardNumber" class="form-control" />
                        </div>

                        <div class="col-12">
                            <label class="col-form-label">
                                CVV:
                            </label>

                            <input asp-for="CartHeader.CVV" class="form-control" />
                        </div>

                        <div class="col-12 pb-4">
                            <label class="col-form-label">
                                Expiry Date:
                            </label>

                            <input asp-for="CartHeader.ExpiryDate" class="form-control" placeholder="MM/YY" />
                        </div>
                    </div>
                </div>

                <div class="col-5">
                    <div class="card mt-4">
                        <div class="card-body">
                            <div class="d-none d-lg-block">
                                <div class="row text-danger">
                                    <div class="col-6">
                                        <span>Product Details</span>
                                    </div>

                                    <div class="col-3">
                                        <span>Price</span>
                                    </div>

                                    <div class="col-3">
                                        <span>Count</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr/>

                        @foreach(var item in Model.CartDetails)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px;">
                                        @item.Product.Name
                                    </span>
                                </div>

                                <div class="col-3">
                                    <span style="font-size:17px;">
                                        @item.Product.Price.ToString("C");
                                    </span>
                                </div>

                                <div class="col-3">
                                    <span style="font-size:17px;">
                                        @item.Product.Count
                                    </span>
                                </div>
                            </div>

                            <hr/>
                        }

                        <div class="row">
                            <div class="col-12 text-right pr-4 text-danger pb-2">
                                Purchase Amount: @Model.CartHeader.PurchaseAmount.ToString("C")
                                <br />
                                @if (Model.CartHeader.DiscountAmount > 0)
                                {
                                    <span class="text-success">
                                        Discount Amount: @Model.CartHeader.DiscountAmount.ToString("C")
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-success form-control">
                                        Place Order
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
        </div>
    </form>
}